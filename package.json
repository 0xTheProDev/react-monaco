{
  "name": "react-monaco",
  "version": "1.0.0",
  "description": "React wrapper over Monaco Editor",
  "main": "dist/index.js",
  "module": "es/index.js",
  "files": [
    "dist/*",
    "es/*",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Progyan1997/react-monaco.git"
  },
  "keywords": [
    "Monaco",
    "React"
  ],
  "author": "Progyan Bhattacharya <bprogyan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Progyan1997/react-monaco/issues"
  },
  "homepage": "https://github.com/Progyan1997/react-monaco#readme",
  "scripts": {
    "lint": "eslint",
    "test": "cross-env CI=1 jest",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "flow-runtime": "0.17.0",
    "monaco-editor": "0.16.2",
    "react": "16.4.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.5",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-flow-runtime": "0.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "cross-env": "5.1.4",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "eslint": "5.0.1",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-react": "6.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.0",
    "eslint-plugin-react": "7.10.0",
    "eslint-plugin-standard": "3.1.0",
    "flow-bin": "0.95.1",
    "jsdom": "14.0.0",
    "react-dom": "16.8.5",
    "rollup": "0.64.1",
    "rollup-plugin-babel": "3.0.7",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-postcss": "2.0.3"
  },
  "peerDependencies": {
    "react": "15.0.0 || 16.0.0",
    "react-dom": "15.0.0 || 16.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "./jest.setup.js"
    ],
    "verbose": true,
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(monaco-editor/.*?)/)"
    ],
    "moduleNameMapper": {
      "monaco-editor": "<rootDir>/node_modules/monaco-editor/esm/vs/editor/editor.main.js"
    }
  }
}
