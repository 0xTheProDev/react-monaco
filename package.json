{
  "name": "react-monaco",
  "version": "0.1.0-beta.2",
  "description": "React wrapper over Monaco Editor",
  "entry": "src/index.js",
  "main": "cjs/index.js",
  "browser": "umd/index.js",
  "module": "esm/index.js",
  "files": [
    "cjs/*",
    "esm/*",
    "umd/*",
    "index.d.ts",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Progyan1997/react-monaco.git"
  },
  "keywords": [
    "Monaco",
    "React",
    "Isomorphic"
  ],
  "author": "Progyan Bhattacharya <bprogyan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Progyan1997/react-monaco/issues"
  },
  "homepage": "https://github.com/Progyan1997/react-monaco#readme",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "clean": "rimraf cjs esm umd",
    "flow": "flow",
    "lint": "eslint src/**/*.js",
    "prepublish": "npm run clean && npm run build",
    "start": "NODE_ENV=development webpack-dev-server --hot --inline",
    "test": "cross-env CI=1 jest"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "monaco-editor": "0.16.2",
    "react": "16.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "@babel/preset-env": "7.4.2",
    "babel-eslint": "8.2.5",
    "babel-jest": "24.5.0",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "7.0.2",
    "cross-env": "5.1.4",
    "css-loader": "^2.1.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "eslint": "5.0.1",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-react": "6.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.0",
    "eslint-plugin-react": "7.10.0",
    "eslint-plugin-standard": "3.1.0",
    "file-loader": "3.0.1",
    "flow-bin": "0.95.1",
    "ignore-styles": "5.0.1",
    "jest": "24.5.0",
    "jest-transform-css": "2.0.0",
    "jsdom": "14.0.0",
    "monaco-editor-webpack-plugin": "1.7.0",
    "react-dom": "16.8.5",
    "rimraf": "2.6.3",
    "rollup": "0.64.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-progress": "1.1.1",
    "style-loader": "0.23.1",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^4.0.0",
    "monaco-editor-webpack-plugin": "1.7.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/jest.setup.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "monaco-editor": "<rootDir>/node_modules/monaco-editor/esm/vs/editor/editor.main.js"
    },
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "<rootDir>/node_modules/jest-transform-css"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(monaco-editor/.*?)/)"
    ],
    "verbose": true
  }
}
